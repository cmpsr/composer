root = true

[*]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.yaml]
trim_trailing_whitespace = none
insert_final_newline = none
indent_size = none
max_line_length = 1000

[*.yml]
trim_trailing_whitespace = none
insert_final_newline = none
indent_size = none
max_line_length = 1000

[*.ts*]
quote_type = single
max_line_length = 120

[*.js*]
quote_type = single
