{
  "exclude": ["node_modules", "lib", "**/*.stories.*", "**/*.test*"],
  "include": ["src"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "context": ["./src/context"],
      "constants/*": ["./src/constants/*"],
      "renderers": ["./src/renderers"],
      "utils": ["./src/utils"]
    }
  }
}
